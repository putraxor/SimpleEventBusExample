<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgFragment"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.putraxor.eventbus.TesFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_write"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edittextData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fragment_write_hint"
        android:inputType="textCapWords" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_hit_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_receive"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewReceive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp" />
</LinearLayout>
